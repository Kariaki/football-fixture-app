<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/team1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/team1image"
        android:maxLines="2"
        android:text="Newcastle" />

    <ImageView
        android:id="@+id/team1image"
        android:layout_width="35dp"

        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/versus"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/versus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team1Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="VS" />

    <ImageView
        android:id="@+id/team2Image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/versus"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        android:visibility="gone" />

    <TextView
        android:id="@+id/team2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/versus"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"

        android:layout_toEndOf="@id/team2Image"
        android:text="Manchester uniteadnweverd" />


</RelativeLayout>